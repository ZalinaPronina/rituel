.site-header{
    position: fixed;
    top: 0;
    right: 0;
    height: -webkit-fill-available;
    width: 170px;
    z-index: 11;
    padding: 100px 20px;
}
.site-header__icon{
    width: 20px;
}
.site-header__mobile-nav{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}
.desktop-header-container{
    display: flex;
    flex-direction: column-reverse;
    width: 100%;
}
.site-header__logo-image{
    position: absolute;
    top: 100px;
    left: 40px;
    z-index: 2;
}
.page-container{
    margin-right: 200px;
}
ul{
    list-style-type: none;
}
//home
.image-bar{
    display: flex;
}
#shopify-section-feature-row{
    max-height: 100vh;
}