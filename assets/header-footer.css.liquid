.site-header {
    position: fixed;
    top: 0;
    right: 0;
    height: -webkit-fill-available;
    max-width: 200px;
    width: 100%;
    z-index: 11;
    padding: 45px 20px;
    background-color: #570D22;
    overflow-y: auto;
}


.announcement-bar{
    z-index: 11;
  
}

.announcement-bar__message{
    margin: 0;
}

.site-header__icon {

    width: 30px;
    height: 30px;
    margin-left: 2%;
    margin-bottom: 20%;

}
.site-nav__link .site-nav__link--main {
    text-decoration: none;
}

a {
    text-decoration: none;
}

.site-footer__linklist {
    font-size: 23px;
}

.site-header .site-nav__label {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-decoration: none;
    line-height: 80px;
    color: white;
    text-align: center;
    font-size: 50px;
}



.header-menu__bottom .site-nav__label {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 15px;
    line-height: 25px;

}


.site-footer__copyright-content {
    font-size: 20px;
}




.site-header__icons-wrapper .icon-login {
    display: none;

}


.site-header__icon.site-header__cart {

    width: 10px;
    height: 10px;
    background: url(Rituel_pic_shop.png);
    background-size: contain;
    margin: 10px 25px;
}


.icon.icon-cart {
    display: none;
}




.newsletter__submit-text--large {
    display: none;
}



.site-footer__item-inner--newsletter {
    padding-top: 25px;
}

.newsletter__info {

    font-size: 16px;

}


.site-footer__newsletter {
    max-width: 450px;
    width: 100%;
}


.newsletter__submit {
    display: none;
}


.site-footer__linklist {
   font-size: 18px;
}


.shopify-section-footer{
    max-height: 300px;
    margin-top: 200px;
    height: 100%;
}

.contact-form{
    --color-text-field: none;
    --color-text-field-text: none;
    --color-border-form: #abc9e8;
    max-width: 650px;
    width: 100%;
}










@media (max-width: 1024px) {
    .site-header {
        max-width: 250px;
    }
}

@media (max-width: 800px) {
    .site-header {
        max-width: 200px;
    }
}

.site-header__icon {
    width: 20px;
}

.site-header__mobile-nav {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}

.desktop-header-container {
    display: flex;
    flex-direction: column-reverse;
    width: 100%;
}

.site-header__logo-image {
    position: absolute;
    top: 100px;
    left: 40px;
    z-index: 2;
}

.page-container {
    margin-right: 240px;
}

ul {
    list-style-type: none;
}

.image-bar {
    display: flex;
}

#shopify-section-feature-row {
    max-height: 100vh;
}

@media (max-width: 1024px) {
    .site-footer__content {
        flex-direction: column;
    }

    .site-footer__linklist {
        padding: 0 !important;
    }

    .copiright-footer {
        text-align: center !important;

    }

    .copiright-footer small {
        font-size: 12px;

    }

    .input-group {
        max-width: 404px;
        width: 100%;
    }

    .site-footer__item-inner--newsletter {
        max-width: 404px;
        width: 100%;
    }
}

@media (min-width: 768px) {
    .desktop-header-container .site-nav__label {
        font-size: 30px !important;
        line-height: 1.5 !important;

    }



@media (max-width: 767px) {
    .desktop-header-container .site-nav__label {
        font-size: 40px !important;

    }

    .header-menu__bottom .site-nav__label {
        font-size: 20px !important;
    }

    .page-container {
        margin-right: 0;
    }
}
}

.mobile-nav--close .icon-hamburger {
    display: none;
}

.mobile-nav--open .icon-close{
    display: none !important;
}

/* .drawer-page-content {
    margin: 0;
} */


.site-footer__content {
    padding: 0;
}

.input-group {
    margin-top: 20px;
}

.grid--footer-float-right {
    margin-top: 30px;

}

.copiright-footer small {
    font-size: 17px;
}

.site-header__icons-wrapper svg {
    width: 25px;
    position: absolute;
    margin-top: 25px;
}

@media (max-width: 767px) {
    .site-header {
        max-width: 375px;
    }

    .header-menu__bottom {
        margin: 30px;
    }
}

